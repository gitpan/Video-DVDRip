use strict;

main: {
	if ( not @ARGV ) {
		print "usage: dr_exec program args ...\n";
		exit 1;
	}

	print STDERR "DVDRIP_JOB_PID=$$\n";

	exec "nice", "-n", 19, @ARGV;
}
